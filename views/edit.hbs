<form
  action='/edit/{{todo.Id}}'
  method='POST'
  class='flex flex-col gap-4 shadow border rounded p-4'
>
  <div>
    <label for='task'>Task</label>
    <input
      id='task'
      name='task'
      class='border rounded text-slate-900'
      value='{{todo.Task}}'
    />
  </div>
  <button
    class='place-self-end bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded'
  >
    Save
  </button>
</form>